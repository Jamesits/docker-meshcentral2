{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "github>jamesits/.github//renovate/default",
        "github>jamesits/.github//renovate/group-monorepo"
    ],
    "packageRules": [
        {
            "matchCategories": ["js"],
            "matchPackageNames": ["!meshcentral"],
            "enabled": false
        }
    ],
    "postUpgradeTasks": {
        "commands": [
            "./sync_deps.js"
        ],
        "fileFilters": [
            "package.json",
            "pnpm-lock.yaml"
        ],
        "executionMode": "update"
    }
}
